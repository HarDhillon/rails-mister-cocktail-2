<h1>Cocktail Name: <%= @cocktail.name %></h1>
<h2>Ingredients:</h2>

<ul>
  <% @cocktail.doses.each do |dose| %>

    <li> <%= dose.description %> of <%= dose.ingredient.name %> </li>
    <%= link_to "Delete Dose", "/doses/#{dose.id}", method: "delete", data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<%= link_to "Add Doses", new_cocktail_dose_path(@cocktail.id) %>

<%= link_to "View All Cocktails", "/cocktails"  %>
